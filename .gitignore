# Environment files (contain secrets)
.env
.env.*
!.env.example

# Database files (user data)
data/
*.db
*.sqlite

# Build artifacts
android/.gradle/
android/build/
android/app/build/
# Ignore APK files in build directories, but allow distribution APKs in root
android/**/*.apk
*.aab

# Allow distribution APKs in project root
!llmytranslate-android-*.apk

# Generated files
# android/app/src/main/res/ - Now tracked for cross-platform builds
*.no-kapt

# Test files and temporary data
test_*.wav
test_*.json
dev/temp/

# Cache and logs
audio_cache/
cache/
logs/
__pycache__/

# Virtual environments
.venv-*/
.venv/

# OS generated files
.DS_Store
Thumbs.db

# IDE files
.vscode/
.idea/

# Node modules and React Native generated projects
node_modules/
mobile/LLMyTranslateApp/
mobile/*/node_modules/

# Python cache
*.pyc
*.pyo
*.pyd
__pycache__/
*.egg-info/

# Large AI model files (exclude from git)
models/*.tflite
models/*.safetensors
models/*.bin
models/*.onnx
models/*.h5
models/tinyllama_1b/
models/distilbert_base/
models/microsoft_speecht5_tts/
models/facebook_mms_tts_eng/
# Allow keeping model directories structure but not the large files
!models/.gitkeep

# Ignore Android local config and build internals
android/local.properties
android/app/.cxx/

# Ignore TFLite assets but keep folder
android/app/src/main/assets/models/**/*.tflite
android/app/src/main/assets/**/*.tflite

# Ignore legacy scripts sandbox
scripts/legacy/**

# Ignore backup files
**/*.bak
**/*.bak[0-9]

# Extra Android build noise
android/.cxx/
android/**/build/
android/**/captures/
android/**/intermediates/
android/**/generated/
android/**/outputs/

# Ignore local runtime files
.ngrok_pid
logs/*.log
logs/**/*.log
# Data caches and local DBs
data/audio_cache/
logs/
*.db

# Ignore data caches
data/cache/

# Track placeholders and samples inside ignored folders
!data/.gitkeep
!data/samples/**
!logs/.gitkeep
